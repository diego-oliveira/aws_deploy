<h1>AWS Deploy</h1> 
<hr>

<%if @exist_config %>

  <% if flash[:message] %>

    <b>Message:</b> <br>
    <h2><%= flash[:message]%></h2>
    <hr>

  <% else %>

    <% if flash[:error] %>

    <b>Message:</b> <br>
    <h2>
      <b>ERROR!</b> <br>
      <%= flash[:error]%>
    </h2>
    <hr>

    <% end %>



    <%= form_tag({:action => :send_to_production}) do %>
      <b>AWS Secret Access Key:</b>  <br>
      <%= text_field(:aws_secret, "", size: "50" ) %><br>
    &nbsp; <br>

      <%= hidden_field(:env, "")%>

      <button class="sexybutton sexysimple"><span class="ok">Push do STAGE</span></button>
      &nbsp;&nbsp;&nbsp;
      <button class="sexybutton sexysimple sexyblue"><span class="ok">Push do ADMIN</span></button>
      &nbsp;&nbsp;&nbsp;
      <button class="sexybutton sexysimple sexyred"><span class="ok">Push do PRODUCTION</span></button>
            
    <% end %>






  <% end %>

<% else %>
  <%= render :partial => "config_file_not_found" %>
<% end %>
